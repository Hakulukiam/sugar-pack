{
    "name": "sgtpepper9907/sugar-pack",
    "description": "CLI tool for packaging SugarCRM module loadable packages",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "David Angulo",
            "email": "david.angulo.arias@gmail.com"
        }
    ],
    "require": {
        "symfony/console": "^5.0",
        "symfony/yaml": "^5.0",
        "ramsey/uuid": "^4.0",
        "guzzlehttp/guzzle": "~6.0",
        "phpfastcache/phpfastcache": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "SugarPack\\" : "src/"
        }
    },
    "bin": ["bin/sugar-pack"],
    "require-dev": {
        "phpunit/phpunit": "^9"
    },
    "autoload-dev": {
        "psr-4": {
            "SugarPack\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-package-install": [
            "SugarPack\\ComposerScripts::createConfigFilesIfNotExists"
        ],
        "post-package-update": [
            "SugarPack\\ComposerScripts::createConfigFilesIfNotExists"
        ]
    }
}
